# Use NVIDIA CUDA runtime with Ubuntu as the base image
FROM nvidia/cuda:11.8.0-runtime-ubuntu20.04

# FROM --platform=linux/amd64 nvidia/cuda:11.8.0-runtime-ubuntu20.04

# Set the working directory
WORKDIR /app

# Install Python 3.9, pip, and system dependencies
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
    python3.9 \
    python3.9-distutils \
    python3-pip \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Update the default `python3` and `pip` to point to Python 3.9
RUN ln -sf /usr/bin/python3.9 /usr/bin/python3 && \
    ln -sf /usr/bin/pip3 /usr/bin/pip

# Install PyTorch with CUDA support
RUN pip install --no-cache-dir torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118

# Install additional Python libraries
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose the backend port
EXPOSE 8000

# Run the FastAPI server
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]